# .env - Environment Configuration
# Copy this to .env and update with your actual database credentials

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_mysql_password
DB_NAME=face_recognition_db

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here

# For Production (Render.com or other cloud providers)
# DB_HOST=your-cloud-mysql-host
# DB_PORT=3306
# DB_USER=your-cloud-mysql-user
# DB_PASSWORD=your-cloud-mysql-password
# DB_NAME=face_recognition_db

# Optional: JawsDB MySQL (Heroku addon) or similar cloud MySQL
# JAWSDB_URL=mysql://username:password@hostname:port/database_name

# File Storage (fallback if MySQL is not available)
FALLBACK_TO_FILES=true
